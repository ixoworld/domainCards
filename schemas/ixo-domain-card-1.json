{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://w3id.org/ixo/schemas/ixo-domain-card-1.json",
  "title": "IXO Domain Card",
  "type": "object",
  "required": ["@context", "type", "issuer", "validFrom", "credentialSubject", "credentialSchema"],
  "properties": {
    "@context": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          { "type": "string", "format": "uri" },
          { "type": "object" }
        ]
      }
    },
    "id": { "type": "string" },
    "type": {
      "type": "array",
      "items": { "type": "string" },
      "contains": { "const": "VerifiableCredential" }
    },
    "issuer": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "required": ["id"],
          "properties": { "id": { "type": "string" } },
          "additionalProperties": true
        }
      ]
    },
    "validFrom": { "type": "string", "format": "date-time" },
    "credentialSchema": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string" }
      },
      "additionalProperties": true
    },
    "credentialSubject": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": { "type": "string" },
        "type": {
          "type": "array",
          "items": { "type": "string" }
        },
        "name": { "type": ["string", "array"] },
        "alternateName": { "type": ["string", "array"] },
        "url": { "type": ["string", "array"], "items": { "type": "string", "format": "uri" } },
        "sameAs": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "logo": { "type": ["object", "array"] },
        "image": { "type": ["object", "array"] },
        "keywords": { "type": ["string", "array"] },
        "knowsAbout": { "type": ["string", "array"] },
        "address": { "type": ["object", "array"] },
        "areaServed": { "type": ["object", "array"] },
        "contactPoint": { "type": ["object", "array"] },
        "composition": { "type": "object" },
        "makesOffer": { "type": ["object", "array"] },
        "relationships": { "type": "object" },
        "events": { "type": "array" },
        "agents": { "type": "array" },
        "researchProfile": { "type": "object" }
      },
      "additionalProperties": true
    },
    "proof": { "type": ["object", "array"] }
  },
  "additionalProperties": true
}


